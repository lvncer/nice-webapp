    "test:e2e": "bun test src/tests/e2e/",
    "test:all": "bun test src/tests/",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.56.1",
    "next": "15.5.2",
